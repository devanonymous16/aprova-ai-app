{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Ou "node" dependendo do setup
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx", // <<<<<<<<<<< IMPORTANTE!!!!!!!!!

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias Path (já deve estar no tsconfig.json principal, mas não custa ter aqui também se necessário) */
    "baseUrl": ".", // Ou "../" se tsconfig.app.json estiver em src/
    "paths": {
      "@/*": ["./src/*"] // Ou "../src/*" se baseUrl for "./" e tsconfig.app.json estiver em src/
                        // Ou apenas "*" se baseUrl for "./src"
    }
  },
  "include": ["src"] // Garante que a pasta src seja incluída
}